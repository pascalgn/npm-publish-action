{
  "name": "npm-publish-action",
  "version": "0.0.1",
  "description": "GitHub action to automatically publish packages to npm",
  "author": "Pascal",
  "license": "MIT",
  "private": true,
  "bin": {
    "npm-publish-action": "./index.js"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "mocha tests.js"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "mocha": "^8.0.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": "off"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
